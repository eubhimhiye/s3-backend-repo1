name: terraform

on:: [push]

jobs:
  release:
    permissions: 
      contents: write
      issues: write
      pull-requests: write
    runs-on: ubuntu-latest
    steps:
      - name: checkout
        uses: action/checkout@v3
      - name: release
        run: npx semantic-release
        env: 
          GITHUB_TOKEN: ${{secret.GITHUB_TOKEN}}